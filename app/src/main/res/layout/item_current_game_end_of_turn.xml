<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/current_game_end_of_turn_background"
    android:padding="@dimen/item_played_games_list_common_margin">

    <TextView
        android:id="@+id/current_game_end_of_turn_mi_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MI"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_game_end_of_turn_vi_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VI"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_game_end_of_turn_mi_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/current_game_end_of_turn_mi_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_game_end_of_turn_vi_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/current_game_end_of_turn_vi_label"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>